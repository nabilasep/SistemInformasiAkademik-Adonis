<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - Sistem Akademik ASEP</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .login-container {
      max-width: 400px;
      margin: 0 auto;
      padding: 2rem 1rem;
    }
    .card {
      border: none;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .btn-primary {
      background-color: #0d6efd;
      border-color: #0d6efd;
    }
  </style>
</head>
<body>
  <div class="container-fluid vh-100 d-flex align-items-center">
    <div class="login-container w-100">
      <div class="card">
        <div class="card-body p-4">
          <!-- Header -->
          <div class="text-center mb-4">
            <h3 class="fw-bold">Login</h3>
            <p class="text-muted">Sistem Akademik ASEP University</p>
          </div>

          <!-- Flash Messages -->
          @if(flashMessages.has('errors'))
            <div class="alert alert-danger" role="alert">
              @if(flashMessages.get('errors.auth'))
                {{ flashMessages.get('errors.auth') }}
              @else
                Terdapat kesalahan pada form yang Anda isi.
              @endif
            </div>
          @endif

          @if(flashMessages.has('message'))
            <div class="alert alert-info" role="alert">
              {{ flashMessages.get('message') }}
            </div>
          @endif

          <!-- Login Form -->
          <form action="{{ route('login') }}" method="POST">
            {{ csrfField() }}
            
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input 
                type="email" 
                class="form-control @if(flashMessages.has('errors.email')) is-invalid @endif" 
                id="email" 
                name="email" 
                placeholder="Masukkan email Anda"
                required
              >
              @if(flashMessages.has('errors.email'))
                <div class="invalid-feedback">
                  {{ flashMessages.get('errors.email') }}
                </div>
              @endif
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input 
                type="password" 
                class="form-control @if(flashMessages.has('errors.password')) is-invalid @endif" 
                id="password" 
                name="password"
                placeholder="Masukkan password Anda"
                required
              >
              @if(flashMessages.has('errors.password'))
                <div class="invalid-feedback">
                  {{ flashMessages.get('errors.password') }}
                </div>
              @endif
            </div>

            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="remember" name="remember">
              <label class="form-check-label" for="remember">
                Ingat saya
              </label>
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary">Login</button>
            </div>
          </form>

          <!-- Register Link -->
          <div class="text-center mt-3">
            <p class="mb-0">Belum punya akun? <a href="{{ route('register') }}">Daftar di sini</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>