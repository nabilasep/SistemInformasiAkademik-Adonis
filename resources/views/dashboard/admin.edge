<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard Admin - Sistem Akademik ASEP</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .sidebar {
      min-height: 100vh;
      background-color: #343a40;
    }
    .sidebar .nav-link {
      color: #adb5bd;
    }
    .sidebar .nav-link:hover,
    .sidebar .nav-link.active {
      color: #fff;
      background-color: #495057;
    }
    .stats-card {
      transition: transform 0.2s;
    }
    .stats-card:hover {
      transform: translateY(-2px);
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      <!-- Sidebar -->
      <nav class="col-md-3 col-lg-2 sidebar p-0">
        <div class="position-sticky pt-3">
          <div class="text-center mb-4">
            <h5 class="text-white">ASEP University</h5>
            <small class="text-muted">Dashboard Admin</small>
          </div>
          
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link active" href="{{ route('admin.dashboard') }}">
                <i class="fas fa-tachometer-alt me-2"></i>
                Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ route('admin.fakultas.index') }}">
                <i class="fas fa-university me-2"></i>
                Fakultas
              </a>
            </li>            <li class="nav-item">
              <a class="nav-link" href="{{ route('admin.prodi.index') }}">
                <i class="fas fa-graduation-cap me-2"></i>
                Program Studi
              </a>
            </li>            <li class="nav-item">
              <a class="nav-link" href="{{ route('admin.mahasiswa.index') }}">
                <i class="fas fa-users me-2"></i>
                Mahasiswa
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="{{ route('admin.matakuliah.index') }}">
                <i class="fas fa-book me-2"></i>
                Mata Kuliah
              </a>
            </li>            <li class="nav-item">
              <a class="nav-link" href="{{ route('admin.krs.index') }}">
                <i class="fas fa-list-alt me-2"></i>
                KRS
              </a>
            </li>
          </ul>
          
          <hr class="text-muted">
          
          <ul class="nav flex-column">
            <li class="nav-item">
              <form action="{{ route('logout') }}" method="POST" class="d-inline">
                {{ csrfField() }}
                <button type="submit" class="nav-link btn btn-link text-start w-100 border-0">
                  <i class="fas fa-sign-out-alt me-2"></i>
                  Logout
                </button>
              </form>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Dashboard Admin</h1>
          <p class="text-muted">Selamat datang, {{ user.email }}</p>
        </div>

        <!-- Statistics Cards -->
        <div class="row mb-4">
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stats-card border-left-primary shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                      Fakultas
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.totalFakultas }}</div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-university fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stats-card border-left-success shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                      Program Studi
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.totalProdi }}</div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-graduation-cap fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stats-card border-left-info shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                      Mahasiswa
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.totalMahasiswa }}</div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-users fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card stats-card border-left-warning shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                      Mata Kuliah
                    </div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ stats.totalMatakuliah }}</div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-book fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Recent Activities & Top Students -->
        <div class="row">
          <!-- Recent KRS -->
          <div class="col-lg-8 mb-4">
            <div class="card shadow">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">KRS Terbaru</h6>
              </div>              <div class="card-body">
                @if(recentKrs && recentKrs.length > 0)
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>Mahasiswa</th>
                          <th>Mata Kuliah</th>
                          <th>SKS</th>
                          <th>Semester</th>
                          <th>Tanggal</th>
                        </tr>
                      </thead>
                      <tbody>
                        @each(krs in recentKrs)
                          <tr>
                            <td>
                              <div>
                                <strong>{{ krs.mahasiswa?.nama || 'N/A' }}</strong>
                                <br>
                                <small class="text-muted">{{ krs.mahasiswa?.nim || 'N/A' }}</small>
                              </div>
                            </td>
                            <td>{{ krs.matakuliah?.nama || 'N/A' }}</td>
                            <td>{{ krs.matakuliah?.sks || 0 }}</td>
                            <td>{{ krs.semester || 'N/A' }}</td>
                            <td>{{ krs.createdAt?.toFormat('dd/MM/yyyy') || 'N/A' }}</td>
                          </tr>
                        @endeach
                      </tbody>
                    </table>
                  </div>
                @else
                  <div class="text-center py-4">
                    <i class="fas fa-list-alt fa-3x text-muted mb-3"></i>
                    <h6 class="text-muted">Belum ada data KRS</h6>
                    <p class="text-muted">Data KRS akan muncul setelah mahasiswa mendaftar mata kuliah.</p>
                  </div>
                @endif
              </div>
            </div>
          </div>

          <!-- Top Students -->
          <div class="col-lg-4 mb-4">
            <div class="card shadow">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Top Mahasiswa (SKS)</h6>
              </div>              <div class="card-body">
                @if(topMahasiswa && topMahasiswa.length > 0)
                  @each(mahasiswa in topMahasiswa)
                    <div class="d-flex align-items-center mb-3">
                      <div class="flex-grow-1">
                        <div class="fw-bold">{{ mahasiswa.nama || 'N/A' }}</div>
                        <small class="text-muted">{{ mahasiswa.nim || 'N/A' }} - {{ mahasiswa.nama_prodi || 'N/A' }}</small>
                      </div>
                      <div class="text-primary fw-bold">
                        {{ mahasiswa.total_sks || 0 }} SKS
                      </div>
                    </div>
                  @endeach
                @else
                  <div class="text-center py-4">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h6 class="text-muted">Belum ada data mahasiswa</h6>
                    <p class="text-muted">Data akan muncul setelah mahasiswa mengambil KRS.</p>
                  </div>
                @endif
              </div>
            </div>
          </div>
        </div>

        <!-- Faculty Overview -->
        <div class="row">
          <div class="col-12">
            <div class="card shadow">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Overview Fakultas</h6>
              </div>              <div class="card-body">
                @if(facultyStats && facultyStats.length > 0)
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Fakultas</th>
                          <th>Jumlah Prodi</th>
                          <th>Jumlah Mahasiswa</th>
                        </tr>
                      </thead>
                      <tbody>
                        @each(fakultas in facultyStats)
                          <tr>
                            <td>{{ fakultas.namaFakultas || 'N/A' }}</td>
                            <td>{{ fakultas.$extras?.prodis_count || 0 }}</td>
                            <td>{{ fakultas.$extras?.total_mahasiswa || 0 }}</td>
                          </tr>
                        @endeach
                      </tbody>
                    </table>
                  </div>
                @else
                  <div class="text-center py-4">
                    <i class="fas fa-university fa-3x text-muted mb-3"></i>
                    <h6 class="text-muted">Belum ada data fakultas</h6>
                    <p class="text-muted">Silakan tambah fakultas untuk memulai.</p>
                  </div>
                @endif
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>